<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/firstFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Programming Topics"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"


                />


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="20"
                app:iss_delay="0"
                app:iss_error_image="@color/lightgrey"
                app:iss_period="1500"
                app:iss_placeholder="@color/black"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Course for you"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"


                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/python"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/pythonicon1"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Python"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"


                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/java"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/java1"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="java"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/cplusplus"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/cplusssssss"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="C++"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/csharp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/csharp111"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="C#"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/html"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/htmliconnn"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="HTML"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/android"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/androidicon"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Android"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/php"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/phpiconn"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Php"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/react"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/react"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="React JS"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="About Self-Learning Platform"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Self-learning is a free platform for learning various programming languages and starting your course in IT world. You can find many lessons here, that would be useful for begginers in coding. Our website is still at the development stage. If you wish to support Self-learning, please contact us.\n

This application is designed for self-learning and requires much effort from every learner.\n

